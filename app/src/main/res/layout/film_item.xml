<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>

        <import type="android.view.View"/>

        <variable
            name="film"
            type="com.example.films.data.Film" />

        <variable
            name="clickListener"
            type="com.example.films.view.FilmClickListener" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="@{()-> clickListener.onFilmClick(film)}"

        android:layout_margin="5dp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:src="@tools:sample/avatars"
        android:layout_gravity="center"
        android:clipToOutline="true"
        android:background="@drawable/film_card"

        />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@color/black"
        android:textSize="@dimen/film_name_size"
        android:text="@{film.localized_name}"
        android:padding="5dp"/>
    </LinearLayout>
</layout>